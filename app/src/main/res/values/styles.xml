<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryAppButtonStyleSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="SecondaryAppButtonStyleSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TertiaryAppButtonStyleSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="PrimaryAppButtonStyleRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="SecondaryAppButtonStyleRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TertiaryAppButtonStyleRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="PrimaryAppTextViewStyleSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="SecondaryAppTextViewStyleSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TertiaryAppTextViewStyleSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="PrimaryAppTextViewStyleRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="SecondaryAppTextViewStyleRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TertiaryAppTextViewStyleRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
